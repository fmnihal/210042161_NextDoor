<!-- views/username.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Username</title>
</head>
<body>
    <h1>Change Username</h1>
    <form action="/profile/settings/username" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- CSRF token -->
        <label for="newUsername">New Username:</label>
        <input type="text" id="newUsername" name="newUsername" value="<%= user.name %>" required><br><br>
        <button type="submit">Change Username</button>
    </form>
    
    <a href="/profile/settings">Back to Settings</a>
</body>
</html>
