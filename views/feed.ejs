<!-- views/feed.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Feed</title>
</head>
<body>
    <h1>Welcome, <%= user.name %>!</h1>
    <a href="/profile">Go to Profile</a>
    <br>
    <br>
    <hr>
    <h2>Your Feed</h2>

    <!-- Post Creation Form -->
    <h3>Create a Post</h3>
    <form action="/feed/create-post" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <label for="content">Post Content:</label>
        <textarea id="content" name="content" required></textarea><br><br>

        <label for="category">Category:</label>
        <select id="category" name="category">
            <option value="discussion">Discussion</option>
            <option value="event">Event</option>
            <option value="lost_and_found">Lost and Found</option>
            <option value="buy_sell">Buy and Sell</option>
            
        </select><br><br>

        <button type="submit">Post</button>
    </form>

    <!-- Display posts -->
    <% if (posts.length > 0) { %>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <p><strong><%= post.user_name %></strong>: <%= post.content %></p>
                    <p><small>Category: <%= post.category %> | Posted on <%= post.created_at %></small></p>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No posts to show.</p>
    <% } %>



