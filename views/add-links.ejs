<!-- views/add-links.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add External Links</title>
</head>
<body>
    <h1>Add External Links</h1>
    <form action="/profile/add-links" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div>
            <label for="github">GitHub Profile:</label>
            <input type="text" name="github" value="<%= user.github || '' %>" required>
        </div>
        
        <div>
            <button type="submit">Update GitHub Profile</button>
        </div>
    </form>

    <br>
    <a href="/profile">Back to Profile</a>
</body>
</html>