<!-- views/email.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Email</title>
</head>
<body>
    <h1>Change Email</h1>
    <form action="/profile/settings/email" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- CSRF token -->
        <label for="newEmail">New Email:</label>
        <input type="email" id="newEmail" name="newEmail" value="<%= user.email %>" required><br><br>
        <button type="submit">Change Email</button>
    </form>
    
    <a href="/profile/settings">Back to Settings</a>
</body>
</html>
